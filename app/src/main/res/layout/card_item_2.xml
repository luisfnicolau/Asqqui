<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/candidate_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/candidate" />

            <LinearLayout
                android:id="@+id/name_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:paddingBottom="8dp"
                android:layout_below="@+id/candidate_image"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_candidate_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-medium"
                    android:text="Dep. JoÃ£o Ernesto"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/candidate_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:text="71"
                    android:textSize="24sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/candidate_party"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_number_layout"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:fontFamily="sans-serif-light"
                android:text="PSDB"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>